@model BookBeat.Models.Book

@{
    ViewBag.Title = "Create";
    var UserID = ViewBag.UserID;
}


<div class="col-md-2"><a href="@Url.Action("List", "Genre")" class="btn btn-primary">Back</a></div>
<p></p>
<h2>Add Book</h2>
<form action="/Book/Create" method="POST">
    <input type="hidden" name="UserID" value="@UserID" />
   
    <div>
        <label>Book Name:</label> <input type="text" name="Title" />
    </div>
    <p></p>
    <div>
        <label>Book Author:</label> <input type="text" name="Author" />
    </div>
    <p></p>
    <div>
        <label>Book Genre:</label>
        <label>Book Author:</label> <input type="text" name="Genre" />
    </div>
    <p></p>


    <div>
        <label>Book Cover URL:</label> <input type="text" name="CoverImageURL" />
    </div>
    <p></p>
    <div>
        <input type="submit" class="btn btn-primary" value="Add Book" />
    </div>
</form>