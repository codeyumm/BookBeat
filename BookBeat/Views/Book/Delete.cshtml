@model BookBeat.Models.BookDTO
@{
    ViewBag.Title = "Delete Book";
}

<h2>Delete Book</h2>

<h3>Are you sure you want to delete this book?</h3>
<div>
    <h4>Book Name: @ViewBag.BookName</h4>
</div>

<form method="post" action="/Book/ConfirmDelete">
    <input type="hidden" value="@ViewBag.id" name="id" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a href="/Book/List" class="btn btn-secondary">Cancel</a>
</form>
